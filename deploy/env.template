# Application Base URL (REQUIRED for GCP deployment)
# Set this to your GCP VM IP or custom domain
# Example: http://34.123.45.67:8000 or https://demo.yourcompany.com
APP_BASE_URL=http://localhost:8000

# LLM Provider Configuration
ORCHESTRATION_LLM_PROVIDER=azure

# Azure OpenAI Configuration - REPLACE WITH YOUR ACTUAL VALUES
# Get these from Azure Portal -> Your OpenAI Resource -> Keys and Endpoint
ORCHESTRATION_LLM_AZURE_ENDPOINT=https://your-instance.openai.azure.com/
ORCHESTRATION_LLM_AZURE_API_KEY=your-azure-openai-api-key-here
ORCHESTRATION_LLM_AZURE_API_VERSION=2025-03-01-preview
ORCHESTRATION_LLM_MODEL=gpt-5-chat

# Optional LLM Settings
ORCHESTRATION_LLM_TEMPERATURE=0.7
ORCHESTRATION_LLM_MAX_TOKENS=2000

# Langfuse Observability (OPTIONAL - for monitoring)
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# CORS Settings (OPTIONAL - restrict allowed origins)
# ALLOWED_ORIGINS=https://webpt-demo.azurewebsites.net,https://demo.yourcompany.com

# Application Settings
PORT=8000
HOST=0.0.0.0
